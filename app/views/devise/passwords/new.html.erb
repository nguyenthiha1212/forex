<div style="background-image: url(background2.png); background-repeat: repeat-y;">
  <div class="container" style="width: 30%; margin-bottom: 50px; margin-top: 50px;">
  <h2>Lấy lại mật khẩu</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: 'f-s-15' %><br />
        <div class="inner-addon right-addon">
          <span class="icon-add">@</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-input-devise", placeholder: "nam@mail.com" %>
        </div>
    </div>

      <div class="form-group ">
      <%= f.submit "Send me reset password instructions", class: "form-control button_devise" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
